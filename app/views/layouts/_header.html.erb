<header class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <%= link_to "CalBook", welcomePage_path, :class => 'brand' %>
          <nav>
           <ul class="nav pull-right">
          <li><%= link_to "Home", welcomePage_path %></li>
          <% if signed_in? %>
            <li id="fat-menu" class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Account <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Profile", profile_path(current_user) %></li>
                <li><%= link_to "Account Settings", edit_user_path(current_user) %></li>
                 <li><%= link_to "Daily Food Statistic", profile_dailies_path(current_user) %></li>
                 <li><%= link_to "Tips", tips_path %></li>
                <li class="divider"></li>
                <li>
                  <%= link_to "Sign out", signout_path, method: "delete" %>
                </li>
                </ul>            
            </li>
  
          <% else %>
            <li><%= link_to "Sign in", signin_path %></li>
          <% end %>
        </ul>
          </nav>
          <% if signed_in? %>
            <%= form_tag users_path, :method => 'get' do %>
              <p>
               <%= text_field_tag :search, params[:search] %>
                <%= submit_tag "Search", :username => nil %>
              </p>
            <% end %>
        <% end %>
        </div>
      </div>
    </header>