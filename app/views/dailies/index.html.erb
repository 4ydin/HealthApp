<h1>Listing dailies</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Date</th>
    <th>Total</th>
    <th>Content</th>
    
  </tr>

<% @dailies.each do |daily| %>
  <tr>
    <td><%= daily.calculated_at %></td>
    <td><%= daily.total %></td>
    <td><%= daily.content %></td>
  
  </tr>
<% end %>
</table>

<br />
<%= link_to "How many calories did you eat today?",new_profile_daily_url(@profile), :class => "btn" %>
<br>

