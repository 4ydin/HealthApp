<h1>Listing dailies</h1>

<table class="table table-striped table-bordered table-hover">
  <tr>
    <th>Date</th>
    <th>Total</th>
    <th>Content</th>
    <th>Options</th>
    
  </tr>

<% @dailies.each do |daily| %>
  <tr>
    <td><%= daily.calculated_at %></td>
    <td><%= daily.total %></td>
    <td><%= daily.content %></td>
    <td><%= link_to 'Show', daily %><br>
    <%= link_to 'Edit', edit_daily_path(daily) %><br>
    <%= link_to 'Delete', daily, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />
<%= link_to "Calculate your Calories today?", new_daily_path, :class => "btn" %>
<br>

<%= render 'dailies/statistic' %>
